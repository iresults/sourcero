{{#if children}}
	<span {{bindAttr class=":toggle-icon children.length::leaf"}} {{action toggle}}>
		{{#if isExpanded}}
			&#x25BC;
		{{else}}
			&#x25B6;
		{{/if}}
	</span>
	<a {{action toggle}} class="text">{{obj.name}}</a>
{{else}}
	{{#link-to "file.edit" obj.id class="text"}}{{obj.name}}{{/link-to}}
{{/if}}

{{#if isExpanded}}
	{{control "treeBranch" content}}
{{/if}}